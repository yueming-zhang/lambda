{
    "configurations": [
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "FirstLambda:HelloWorldFunction (python3.8)",
            "invokeTarget": {
                "target": "template",
                "templatePath": "${workspaceFolder}/FirstLambda/template.yaml",
                "logicalId": "HelloWorldFunction"
            },
            "lambda": {
                "payload": {},
                "environmentVariables": {},
                "runtime": "python3.8"
            }
        },
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "API FirstLambda:HelloWorldFunction (python3.8)",
            "invokeTarget": {
                "target": "api",
                "templatePath": "${workspaceFolder}/FirstLambda/template.yaml",
                "logicalId": "HelloWorldFunction"
            },
            "api": {
                "path": "/hello",
                "httpMethod": "get",
                "payload": {
                    "json": {}
                }
            },
            "lambda": {
                "runtime": "python3.8"
            }
        },
